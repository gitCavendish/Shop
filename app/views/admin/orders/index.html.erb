<h2>订单列表 </h2>
<style>
#orderTable td {
   text-align: center;
  vertical-align: middle;
}
</style>
<table class="table table-bordered table-striped table-hover table-responsive">
  <thead id="orderTable" class="thead-default">
    <tr class="success" >
      <th>#</th>
      <th>生成时间</th>
      <th>订购者</th>
      <th>订单状态</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <th scope="row"> <%= link_to(order.id, admin_order_path(order) ) %> </th>
      <td> <%= order.created_at.to_s(:long) %> </td>
      <td> <%= order.user.email %></td>
      <td> <%= order.aasm_state %> </td>
    </tr>
    <% end %>

  </tbody>
</table>
