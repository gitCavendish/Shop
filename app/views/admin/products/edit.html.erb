<h2> Edit Product </h2>

<%= simple_form_for [:admin, @product] do |f| %>

  <div class="col-md-12">
    <%= f.input :title %>
  </div>
  <div class="col-md-12">
    <%= f.input :address %>
  </div>
  <div class="col-md-12 hidden">
    <%= f.input :latitude %>
  </div>
  <div class="col-md-12 hidden">
    <%= f.input :longitude %>
  </div>

  <div class="col-md-3">
    <%= f.label :category%><br>
    <%= f.select :category, ["chocolate", "nut", "berry", "freshfood"]%>
  </div>

  <div class="col-md-3">
    <%= f.label :carbolevel%><br>
    <%= f.select :carbolevel, ["0-10%", "10-20%", "20-30%", ">30%"]%>
  </div>

  <div class="col-md-3">
    <%= f.input :quantity %>
  </div>

  <div class="col-md-3">
    <%= f.input :price %>
  </div>

  <div class="col-md-12">
    <%= f.input :description, :input_html => {:rows => 6} %>
  </div>

<div class="form-group col-md-12">
   <% if @product.photos.present? %>
     <label class="control-label">目前商品图</label> <br>
     <% @product.photos.each do |p| %>
     <%= image_tag p.avatar.thumb.url, :class => "col-md-3" %>
     <% end %>
   <% end %>
</div>

  <div class="form-group col-md-12">
    <%#= f.input :image, as: :file %>
    <%= f.label "Please upload photos" %><br>
    <%= f.file_field :avatar, :multiple => true, name: "photos[avatar][]"%>
  </div>

  <div class="col-md-12">
    <%= f.input :is_hidden %>
    <%= f.input :is_recommend %>
  </div>

  <div class="col-md-12">
    <%= f.submit "Submit", data: { disable_with: "Submitting..."}, :class => "btn btn-info col-md-3" %>
  </div>
<% end %>
