<div class="header-wrap">
    <div class="primary-wrap">
      <div class="brand-wrap">
        <h1>
          <a href="/" class="brand-link">
            <img src="http://worldforum-healthierfood.org/images/low-carb-logo.png" style="width:60px;height:60px;" alt="Bookdepository.com">
          </a>
        </h1>
      </div>

      <div class="search-wrap">
          <%= form_tag search_products_path, method: :get do %>
            <div class="el-wrap header-search-el-wrap">
              <input type="text" placeholder="Search for foods by keyword / title / description / kinds" name="query_string"  value="<%= params[:q] %>" class="text-input">
              <button class="header-search-btn" type="submit"><span class="text">Search</span></button>
            </div>
            <% end %>
            <div class="result-wrap no-result"><div class="suggest-result"></div><div class="book-result"></div></div>
          <a rel="nofollow" href="/search/advanced" class="advanced-search">Advanced Search</a>
      </div>
    </div>
</div>

<div class="secondary-header-wrap mb10 h50">
	<div class="secondary-header">
        <ul class="page-links mobile-nav-content" data-order="2">
            <li class="mob-nav-shop"><a href="/products/category1">Bestsellers</a></li>
            <li class="mob-nav-shop"><a href="/products/category1">Coming Soon</a></li>
            <li class="mob-nav-shop"><a href="/products/category1">Highlights</a></li>
            <li class="mob-nav-shop"><a href="/products/category1">Bargain Shop</a></li>
        </ul>
	</div>
</div>
