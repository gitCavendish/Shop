<div class="row">
<%= render "products/search_bar" %>
</div>
  <% @products.each do |product| %>
    <div class="col-xs-6 col-md-3 pt5 pb10">
      <%= link_to product_path(product) do %>
        <% if product.photos.present? %>
          <%#= image_tag(product.image.thumb.url, class: "thumbnail") %>
          <%= image_tag(product.photos[0].avatar.thumb.url, class: "thumbnail col-centered") %>
        <% else %>
          <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail col-centered") %>
        <% end %>
      <% end %>
      <div class="tc">
        <%= product.title %> ï¿¥<%= product.price %>
      </div>
    </div>
  <% end %>
