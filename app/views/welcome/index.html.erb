 <!--              第一行食品位置            -->



<div class="container foodbox1" >


  <h4>---巧克力---</h4>
  <hr>
<% @products.where(:category => "chocolate").each do |product| %>
    <div class="food-item col-sm-4 col-md-3">
      <%= link_to product_path(product) do %>
      <div class="item-img">
        <% if product.photos.present? %>
          <%= image_tag(product.photos[0].avatar.thumb.url, class: "thumbnail") %>
        <% else %>
          <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
        <% end %>
      </div>

      <div class="item-info">
          <h3 class="title">
              <%= product.title%>
          </h3>

          <p class="information">
              <a href="/" >Margot Lee Shetterly</a>
          </p>

          <p>显示商品类别</p>
          <p class="format">Carbohydrate level</p>

          <div >
              <p class="price-wrap"> 显示商品价格 </p>
          </div>
      </div>

      <div class="btn-wrap">
            <a href="/" class="btn btn-sm btn-info " >
              <span class="textwhite">Add to basket</span>
            </a>
      </div>
      <% end %>
    </div>
<% end %>
</div>

<div class= "container">
    <%= link_to "See More Bestselling foods", products_path(:category => "chocolate"), class: "btn btn-default btn-block" %>
</div>

