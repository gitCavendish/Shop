<div class="col-lg-12" style="padding: 0px 40px">
 <% object.each do |product| %>
     <div class="food-item col-sm-4 col-md-3">
       <%= link_to product_path(product) do %>
       <div class="item-img" >
         <% if product.photos.present? %>
           <%= image_tag(product.photos[0].avatar.thumb.url) %>
         <% else %>
           <%= image_tag("http://placehold.it/200x200&text=No Pic") %>
         <% end %>
       </div>

       <div>
           <h5>
               <p><%= product.title%></p>
           </h5>
           <a class="carbolevel">Carbo level: <%= product.carbolevel%></a>
           <div >
               <p class="price-wrap" > RMB: <%= product.price%> </p>
           </div>
       </div>

       <div class="btn-wrap">
          <%= link_to "Add to Cart", add_to_cart_product_path(product), :method => :post, :class => "btn btn-info btn-sm" %>
       </div>
       <% end %>
     </div>
 <% end %>
 </div>
